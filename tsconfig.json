{
  "compilerOptions": {
    "baseUrl": ".",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "checkJs": false,
    "esModuleInterop": true,
    "isolatedModules": true,
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "ES2022"
    ],
    "resolveJsonModule": true,
    "strict": true,
    "target": "ES2022",
    "types": [
      "node"
    ]
  },
  "ts-node": {
    "transpileOnly": true
  },
  "include": [
    "*.ts"
  ],
  "exclude": [
    "examples/**/*.*",
    "node_modules",
    "dist",
    "tmp"
  ]
}
